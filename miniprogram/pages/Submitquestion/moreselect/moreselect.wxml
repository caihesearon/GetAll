<!-- 单选框 -->
<van-radio-group value="{{radio}}">
  <van-cell-group>
    <van-cell class='van-cell' title="技能需求" value-class="value-class" clickable size='large' data-name="1" bind:click="onClick">
      <van-radio value="1" name="1" />
    </van-cell>
    <van-cell class='van-cell' title="问答板块" value-class="value-class" clickable size='large' data-name="2" bind:click="onClick">
      <van-radio value="2" name="2" />
    </van-cell>
    <van-cell class='van-cell' title="心情分享" value-class="value-class" clickable size='large' data-name="3" bind:click="onClick">
      <van-radio value="3" name="3" />
    </van-cell>
  </van-cell-group>
</van-radio-group>


